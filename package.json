{
  "name": "upverse",
  "version": "1.0.0",
  "author": "MPDL Collections",
  "description": "Direct file upload to research data repository",
  "license": "MIT",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "start": "electron-forge start",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/favicons/favicon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --platform=win32 --arch=x64 --icon=assets/favicons/favicon.ico --prune=false --out=release-builds --version-string.CompanyName=MPDL --version-string.FileDescription=Uploader --version-string.ProductName=\"Upverse\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/favicons/favicon --prune=false --out=release-builds",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish"
  },
  "repository": "https://github.com/MPDL/upverse",
  "keywords": [
    "edmond",
    "research",
    "data",
    "repository",
    "dataverse",
    "upload"
  ],
  "devDependencies": {
    "@electron-forge/cli": "^6.0.5",
    "@electron-forge/maker-deb": "^6.0.5",
    "@electron-forge/maker-rpm": "^6.0.5",
    "@electron-forge/maker-squirrel": "^6.0.5",
    "@electron-forge/maker-zip": "^6.0.5",
    "@electron-forge/publisher-github": "^6.0.5",
    "@types/bootstrap": "^5.1.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^22.0.2",
    "electron-packager": "^17.1.1",
    "eslint": "^7.32.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.8.1",
    "electron-squirrel-startup": "^1.0.0",
    "form-data": "^4.0.0",
    "http": "^0.0.1-security"
  }
}
